{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "pr_guardian.main:app",
                "--host", "127.0.0.1",
                "--port", "8000",
                "--ssl-keyfile", "key.pem",
                "--ssl-certfile", "cert.pem"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "jinja": true
        }
    ]
}